{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ES2020",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "*": ["src/*"]
      },
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*", "node_modules"],
    "exclude": ["dist"]
  }
  