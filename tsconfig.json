{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "./",
    "skipLibCheck": true,
    "isolatedModules": false,
    "noEmit": false,
    "lib": ["esnext"],
    "types": ["node"]
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts", "bin/*.ts"]
}
